<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@color/background_color">

    <!-- Date Input -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textSize="18sp"
        android:textColor="@color/text_color"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/editTextDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Date"
        android:inputType="text"
        android:padding="12dp"
        android:textColor="@color/text_color"
        android:background="@drawable/ios_edit_text_background" />

    <!-- Weather Icon Spinner -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weather Condition"
        android:textSize="18sp"
        android:textColor="@color/text_color"
        android:layout_marginTop="16dp" />

    <Spinner
        android:id="@+id/spinnerWeatherCondition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@drawable/ios_spinner_background" />

    <!-- Minimum Temperature Input -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Minimum Temperature"
        android:textSize="18sp"
        android:textColor="@color/text_color"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/editTextMinTemp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Minimum Temperature in ℃"
        android:inputType="text"
        android:padding="12dp"
        android:textColor="@color/text_color"
        android:background="@drawable/ios_edit_text_background" />

    <!-- Maximum Temperature Input -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Maximum Temperature"
        android:textSize="18sp"
        android:textColor="@color/text_color"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/editTextMaxTemp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Maximum Temperature in ℃"
        android:inputType="text"
        android:padding="12dp"
        android:textColor="@color/text_color"
        android:background="@drawable/ios_edit_text_background" />

    <!-- Save Button -->
    <Button
        android:id="@+id/buttonSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_marginTop="24dp"
        android:padding="12dp"
        android:textColor="@color/white"
        android:background="@drawable/ios_button_background" />

</LinearLayout>
